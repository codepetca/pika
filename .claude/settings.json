{
  "mcpServers": {
    "pika-browser-teacher": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--browser", "chromium",
        "--viewport-size", "1440x900",
        "--storage-state", ".auth/teacher.json"
      ]
    },
    "pika-browser-student": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--browser", "chromium",
        "--viewport-size", "1440x900",
        "--storage-state", ".auth/student.json"
      ]
    }
  }
}
